<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?loadingViewDrawable"
    android:padding="12dp"
    android:layout_margin="169dp">

    <ProgressBar
        android:id="@+id/debate_item_loading_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminate="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/debate_item_info"
        android:visibility="visible"
        android:orientation="horizontal"
        android:weightSum="30">

        <TextView
            android:id="@+id/debate_item_speaker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?secondaryLightColor" />

        <TextView
            android:id="@+id/debate_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="?secondaryLightColor" />

    </LinearLayout>

    <TextView
        android:id="@+id/debate_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textColor="?mainBodyTextColor" />

</LinearLayout>