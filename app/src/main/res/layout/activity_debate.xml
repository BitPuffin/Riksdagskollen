<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackgroundColor">

    <include layout="@layout/riksdagen_toolbar"></include>

    <include
        layout="@layout/loading_view"
        android:visibility="visible"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/document_container"
            android:orientation="vertical">

            <oscar.riksdagskollen.Util.View.DocumentHtmlView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/document_view">

            </oscar.riksdagskollen.Util.View.DocumentHtmlView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debatt"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textColor="?mainTitleTextColor"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_debate_recyclerview">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>