<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/riksdagBlue</item>
        <item name="colorPrimaryDark">@color/riksdagBlueDark</item>
        <item name="colorAccent">@color/riksdagBlue</item>

        <item name="secondaryLightColor">@color/secondaryLightColor</item>
        <item name="secondaryDarkColor">@color/secondaryDarkColor</item>

        <item name="mainBackgroundColor">@color/white</item>
        <item name="cardViewBackgroundColor">@color/white</item>
        <item name="cardViewBorderColor">@color/white</item>
        <item name="mainTitleTextColor">@color/riksdagBlue</item>
        <item name="mainBodyTextColor">@color/darkText</item>
        <item name="buttonColor">@color/riksdagBlue</item>

        <item name="yesindicatorcolor">@color/yesVoteColorLight</item>
        <item name="noindicatorcolor">@color/noVoteColorLight</item>

        <item name="navigationDrawerHighlight">@color/secondaryDarkColor</item>

        <item name="loadingViewDrawable">@drawable/loading_view_default</item>
        <item name="buttonBackgroundDrawable">@drawable/button_background_default</item>

        <item name="android:windowBackground">@color/riksdagBlue</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>

        <item name="secondaryLightColor">@color/secondaryLightColor</item>
        <item name="secondaryDarkColor">@color/secondaryDarkColor</item>

        <item name="mainBackgroundColor">@color/black</item>
        <item name="cardViewBorderColor">@color/black</item>
        <item name="cardViewBackgroundColor">@color/black</item>
        <item name="mainTitleTextColor">@color/white</item>
        <item name="mainBodyTextColor">@color/white</item>
        <item name="buttonColor">@color/white</item>

        <item name="yesindicatorcolor">@color/darkResultIndicator</item>
        <item name="noindicatorcolor">@color/darkResultIndicator</item>

        <item name="navigationDrawerHighlight">@color/darkResultIndicator</item>

        <item name="loadingViewDrawable">@drawable/loading_view_black</item>
        <item name="buttonBackgroundDrawable">@drawable/button_background_black</item>

        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="NavigationStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">?mainBodyTextColor</item>
        <item name="android:textColorSecondary">?mainBodyTextColor</item>
        <item name="colorControlHighlight">?navigationDrawerHighlight</item>
    </style>

    <style name="BlackTheme.NoActionBar" parent="BlackTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultTheme.NoActionBar" parent="DefaultTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">?attr/buttonColor</item>
        <item name="android:background">?attr/mainBackgroundColor</item>
        <item name="android:textColor">?attr/mainTitleTextColor</item>
        <item name="textColorAlertDialogListItem">?attr/mainBodyTextColor</item>
    </style>

    <style name="AttributionName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/riksdagBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AttributionCopyright" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AttributionLicense" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextStyleExpandedToolbar">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
