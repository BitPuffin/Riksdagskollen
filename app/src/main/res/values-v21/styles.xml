<resources>

    <style name="DefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="WhiteTheme.NoActionBar" parent="WhiteTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/cardview_light_background</item>
        <item name="android:textColorPrimaryInverse">@color/cat_blue</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/riksdagBlueLight</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="toolbarTitleTextColor">@color/riksdagBlueLight</item>

        <item name="secondaryLightColor">@color/riksdagBlueLight</item>
        <item name="secondaryDarkColor">@color/secondaryDarkColor</item>

        <item name="mainBackgroundColor">@color/white</item>
        <item name="cardViewBorderColor">@color/white</item>
        <item name="cardViewBackgroundColor">@color/white</item>
        <item name="mainTitleTextColor">@color/riksdagBlueLight</item>
        <item name="mainBodyTextColor">@color/darkText</item>
        <item name="buttonColor">@color/riksdagBlueLight</item>

        <item name="yesindicatorcolor">@color/riksdagBlueAlpha</item>
        <item name="noindicatorcolor">@color/riksdagBlueAlpha</item>

        <item name="navigationDrawerHighlight">@color/secondaryDarkColor</item>

        <item name="loadingViewDrawable">@drawable/loading_view_white</item>
        <item name="buttonBackgroundDrawable">@drawable/button_background_white</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:editTextColor">@color/riksdagBlueLight</item>
        <item name="android:navigationBarColor">@color/riksdagBlueAlpha</item>

    </style>
</resources>
